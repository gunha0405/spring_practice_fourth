<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="30">
    <Appenders>
        <!-- 콘솔 출력 -->
        <Console name="Console" target="SYSTEM_OUT">
    		<PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss}] %-5p traceId=%X{traceId} userId=%X{userId} %c{1}:%L - %m%n"/>
		</Console>

        <!-- 파일 로그 (용량 기준 롤링) -->
        <RollingFile name="FileLogger"
                     fileName="logs/app.log"
                     filePattern="logs/app-%d{yyyy-MM-dd-HH-mm}-%i.log.gz">
            <PatternLayout>
    			<Pattern>[%d{yyyy-MM-dd HH:mm:ss}] %-5p traceId=%X{traceId} userId=%X{userId} %c{1}:%L - %m%n</Pattern>
			</PatternLayout>
            <Policies>
                <!-- 파일 크기가 10MB를 넘으면 새 파일 생성 -->
                <SizeBasedTriggeringPolicy size="10 MB"/>
            </Policies>
            <!-- 보관 개수 제한 (예: 10개만 유지) -->
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>
    </Appenders>

    <Loggers>
        <!-- 내 프로젝트 패키지 레벨 -->
        <Logger name="com.example" level="DEBUG" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="FileLogger"/>
        </Logger>

        <!-- root logger (기본) -->
        <Root level="INFO">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>
